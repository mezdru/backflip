<div class="main">
  <div class="pure-g">
  </div>
  <form class="pure-form pure-form-stacked" action="{{coverAction}}" method="post">
    <input type="hidden" name="_id" value="{{record._id}}" />
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box uploadcare-box">
          <input id="uploadcare" type="hidden" role="uploadcare-uploader" name="picture[url]" data-crop="1280x720 upscale" data-images-only="true"  value="{{uploadcareUrl}}"/>
        </div>
        <div class="grid-box">
          {{> form_errors}}
          <h2>{{__ "Everybody at %s will see your cover picture when visiting your profile" organisation.name}}</h2>
        </div>
      </div>
    </div>
    <div class="bottom-buttons">
      <div class="pure-g">
        <div class="pure-u-1-2 pure-u-md-1-3">
          <div class="grid-box">
            <a class="pure-button scale back-button" href="{{backUrl}}">{{{__ "Back"}}}</a>
          </div>
        </div>
        <div class="pure-u-1-2 pure-u-md-2-3">
          <div class="grid-box">
            <button type="submit" class="pure-button scale">{{{__ "Change Cover"}}}</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
{{> jquery}}
{{> uploadcare_script}}
